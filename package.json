{
  "name": "studyPals",
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "android": "react-native run-android",
    "ios": "react-native run-ios",
    "windows": "npx react-native run-windows",
    "windows:init": "npx react-native init-windows && npx react-native run-windows --msbuildprops \"RestoreLockedMode=false\"",
    "windows:env-setup": "./src/scripts/windows-env-setup.sh",
    "lint": "eslint .",
    "start": "react-native start",
    "test": "jest",
    "setup-git-hook": "bash src/scripts/git-hook-init-command.sh",
    "optimize-image": "node src/scripts/optimize-image.cjs",
    "create-theme": "node src/scripts/create-theme.cjs & pnpm eslint --fix",
    "create-icon": "node src/scripts/create-icon.cjs"
  },
  "dependencies": {
    "jotai": "^2.12.1",
    "react": "^19",
    "react-native": "^0.78.0",
    "react-native-macos": "^0.78.0",
    "react-native-windows": "^0.78.0"
  },
  "devDependencies": {
    "@babel/core": "^7.25.2",
    "@babel/preset-env": "^7.25.3",
    "@babel/runtime": "^7.25.0",
    "@eslint/js": "^9.24.0",
    "@react-native-community/cli": "18.0.0",
    "@react-native-community/cli-platform-android": "18.0.0",
    "@react-native-community/cli-platform-ios": "18.0.0",
    "@react-native/babel-preset": "0.79.0",
    "@react-native/eslint-config": "0.79.0",
    "@react-native/gradle-plugin": "^0.79.0",
    "@react-native/metro-config": "0.79.0",
    "@react-native/typescript-config": "0.79.0",
    "@stylistic/eslint-plugin": "^2.13.0",
    "@tanstack/eslint-plugin-query": "^5.66.0",
    "@types/jest": "^29.5.13",
    "@types/react": "^19.0.0",
    "@types/react-test-renderer": "^19.0.0",
    "@typescript-eslint/eslint-plugin": "^8.29.1",
    "@typescript-eslint/parser": "^8.29.1",
    "eslint": "^8.56.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-react": "^7.37.4",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.16",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "globals": "^15.14.0",
    "jest": "^29.6.3",
    "metro-config": "^0.82.1",
    "react-test-renderer": "19.0.0",
    "typescript": "5.0.4",
    "typescript-eslint": "^8.30.1"
  },
  "engines": {
    "node": ">=18"
  },
  "react-native-windows": {
    "init-windows": {
      "name": "studyPals",
      "namespace": "studyPals",
      "template": "old/uwp-cpp-app"
    }
  }
}
