{
  "name": "studyPals",
  "displayName": "studyPals",
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "dev": "cd src/scripts && start-dev.sh",
    "build": "cd src/scripts && build.sh",
    "android": "react-native run-android",
    "android:build": "cd android && gradlew assembleDebug",
    "windows": "react-native run-windows",
    "windows:build": "react-native run-windows --no-launch --no-deploy --no-packager",
    "windows:init": "react-native init-windows --overwrite && npx react-native run-windows --msbuildprops \"RestoreLockedMode=false\"",
    "windows:env-setup": "powershell -NoProfile -ExecutionPolicy Bypass -File ./src/scripts/windows-env-setup.ps1",
    "ios": "react-native run-ios",
    "lint": "eslint .",
    "start": "react-native start",
    "test": "jest",
    "setup-git-hook": "bash src/scripts/git-hook-init-command.sh",
    "optimize-image": "node src/scripts/optimize-image.cjs",
    "create-theme": "node src/scripts/create-theme.cjs & pnpm eslint --fix",
    "create-icon": "node src/scripts/create-icon.cjs"
  },
  "dependencies": {
    "jotai": "^2.12.1",
    "react": "^18.2.6",
    "react-native": "^0.77.0",
    "react-native-macos": "^0.76.8",
    "react-native-windows": "^0.77.8"
  },
  "devDependencies": {
    "@babel/core": "^7.25.2",
    "@babel/preset-env": "^7.25.3",
    "@babel/runtime": "^7.25.0",
    "@eslint/js": "^9.24.0",
    "@react-native-community/cli": "16.0.2",
    "@react-native-community/cli-platform-android": "16.0.2",
    "@react-native-community/cli-platform-ios": "16.0.2",
    "@react-native/babel-preset": "0.78.0",
    "@react-native/eslint-config": "0.78.0",
    "@react-native/gradle-plugin": "^0.78.0",
    "@react-native/metro-config": "0.78.0",
    "@react-native/typescript-config": "0.78.0",
    "@stylistic/eslint-plugin": "^2.13.0",
    "@tanstack/eslint-plugin-query": "^5.66.0",
    "@types/jest": "^29.5.13",
    "@types/react": "^18.2.6",
    "@types/react-test-renderer": "^18",
    "@typescript-eslint/eslint-plugin": "^8.29.1",
    "@typescript-eslint/parser": "^8.29.1",
    "eslint": "^8.56.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-react": "^7.37.4",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.16",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "globals": "^15.14.0",
    "jest": "^29.6.3",
    "metro-config": "^0.82.1",
    "typescript": "5.0.4",
    "typescript-eslint": "^8.30.1"
  },
  "engines": {
    "node": ">=18"
  },
  "react-native-windows": {
    "init-windows": {
      "name": "studyPals",
      "namespace": "studyPals",
      "template": "old/uwp-cpp-app"
    }
  }
}
